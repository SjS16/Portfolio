<div class="comment-card">
  <div class="card">
    <div class="comment-card-block">
      <div class="row">
        <div class="col-md-2">
          <%= gravatar_helper comment.user %>
        </div>
        <div class="col-md-10 comment-wording">
          <div class="comment-content">
            <%= comment.content %>
          </div>
          <div class=" comment-details">
            Comment posted by <strong><%= comment.user.first_name %></strong> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
          </div>
        </div>
      </div>
    </div>
  </div>
</div>