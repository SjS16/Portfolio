<header class="blog-header py-3">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-5 pt-1">
      <%= nav_helper "text-muted m-1 blog-nav", "span" %>
    </div>
    <div class="col-2 text-center">
      <a class="blog-header-logo text-dark" href="#">Blog</a>
    </div>
    <div class="col-5 d-flex justify-content-end align-items-center">
      <%= link_to 'New Blog', new_blog_path, class: "btn btn-sm btn-outline-secondary m-2" if logged_in?(:site_admin) %>
      <%= login_helper "btn btn-sm btn-outline-secondary m-2" %>
    </div>
  </div>
</header>