<header class="blog-header py-3">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-4 pt-1">
      <%= link_to "Home", root_path, class: "text-muted m-1" %>
      <%= link_to "About Me", about_path, class: "text-muted m-1" %>
      <%= link_to "Contact", contact_path, class: "text-muted m-1" %>
      <%= link_to "Blog", blogs_path, class: "text-muted m-1" %>
      <%= link_to "Portfolio", portfolios_path, class: "text-muted m-1" %>
    </div>
    <div class="col-4 text-center">
      <a class="blog-header-logo text-dark" href="#">Blogs</a>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <%= link_to 'New Blog', new_blog_path, class: "btn btn-sm btn-outline-secondary m-2" if logged_in?(:site_admin) %>
      <%= login_helper "btn btn-sm btn-outline-secondary m-2" %>
    </div>
  </div>
</header>