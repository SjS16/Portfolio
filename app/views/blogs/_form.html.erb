<div class="card-block">
  <%= form_with(model: blog, local: true) do |form| %>
    <% if blog.errors.any? %>
        <% blog.errors.full_messages.each do |error| %>
          <%= js add_gritter(error, title: "Steph Simpson Portfolio", sticky: false) %>
        <% end %>
    <% end %>

    <div class="form-group">
      <%= form.text_field :title, class: "form-control", placeholder: 'Title' %>
    </div>

    <div class="form-group">
      <%= form.text_area :body, class: "form-control", rows: "5", placeholder: 'Content' %>
    </div>

    <div class="form-group">
      <%= form.label :topic %>
      <%= form.collection_select(:topic_id, Topic.all, :id, :title) %>
    </div>

    <div class="form-group">
      <%= form.submit "Submit", class: "btn btn-dark" %>
    </div>
  <% end %>
</div>

