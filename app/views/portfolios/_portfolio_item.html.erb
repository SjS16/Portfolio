<div class="portolfio-card col-md-4" data-id="<%= portfolio_item.id %>">
  <div class="card mb-4 box-shadow">
    <%= image_tag portfolio_item.thumb_image.to_s, width: '100%' unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text">
      <span class="portfolio-title"><%= portfolio_item.title %></span><br>
      <span class="portfolio-subtitle"><%= portfolio_item.subtitle %></span>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Show", portfolio_show_path(portfolio_item) %></button>
          <% if logged_in?(:site_admin) %>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_portfolio_path(portfolio_item) %></button>
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Delete", portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %></button>
          <% end %>
        </div>
        <small class="text-muted tech-count">Technologies count: <%= portfolio_item.technologies.count %></small>
      </div>
    </div>
  </div>
</div>

