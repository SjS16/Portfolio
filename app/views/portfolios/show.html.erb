<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
    <%= image_tag @portfolio_item.main_image.to_s, width: '100%' unless @portfolio_item.main_image.nil? %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <hr>
      <h4><em><%= @portfolio_item.subtitle %></em></h4>
      <p><%= @portfolio_item.body %></p>
      <hr>
      <% if @portfolio_item.technologies.size > 0 %>
      <h3>Technologies used:</h3>

      <% @portfolio_item.technologies.each do |t|%>
        <p><%= t.name %></p>
      <% end %>
      <% end %>
      <% if logged_in?(:site_admin) %>
        <div>
          <%= link_to "Edit", edit_portfolio_path(@portfolio_item), class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



