<%= image_tag @portfolio_item.main_image if !@portfolio_item.main_image.nil? %>
<h1><%= @portfolio_item.title %></h1>
<h4><em><%= @portfolio_item.subtitle %></em></h4>
  <p><%= @portfolio_item.body %></p>

<h2>Technologies used:</h2>

<% @portfolio_item.technologies.each do |t|%>
  <p><%= t.name %></p>
<% end %>

<%= link_to "Edit", edit_portfolio_path(@portfolio_item)  if logged_in?(:site_admin) %>
