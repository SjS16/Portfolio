<%= form_for(@portfolio_item) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: "form-control" %>
      </div>
    <div class="form-group">
      <label class="btn btn-info">
        Upload a main image file <%= f.file_field :main_image %>
      </label>
    </div>
    <div class="form-group">
      <label class="btn btn-info">
        Upload a thumb image file <%= f.file_field :thumb_image  %>
      </label>
    </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", rows: 10 %>
      </div>
    </div>
  </div>
<hr>
  <div class="col-md-12">
    <div>
    <h2>Technologies Used:</h2>
      <%= f.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
      <% end %>
      <div>
        <%= link_to_add_association 'Add Technology', f, :technologies %>
      </div>
    </div>
  </div>

  <div class="row">
  <div class="form-group col-md-6">
      <%= f.submit "Save Portfolio Item", class: "btn btn-dark btn-block" %>
    </div>
    <div class="form-group col-md-6">
      <%= link_to "Back", :back, class: "btn btn-light btn-block" %>
    </div>
  </div>
<% end %>